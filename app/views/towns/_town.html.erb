<%= link_to region_city_town_path(id: town.id, city_id: town.city_id), remote: true do %>
  <div class="lead p-1" style="border-width: 1px;border-bottom-style: solid;border-bottom-color: rgb(236,239,242);" id="town-<%= town.id %>">
    <div class="row justify-content-between">
      <div class="col col-10">
        <p class="lead" style="font-size: 15px;"><i class="fas fa-location-arrow text-secondary" style="padding-right: 8px;"></i>
          <span id="town-<%= town.id %>">
            <%= town.town_desc %>
          </span>
        </p>
      </div>
      <div class="col d-lg-flex justify-content-lg-end align-items-lg-center col-1"><i class="fas fa-chevron-right text-secondary" style="font-size: 10px;"></i></div>
    </div>
  </div>
<% end %>