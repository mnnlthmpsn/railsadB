<p id="notice"><%= notice %></p>

<h1>Towns</h1>

<table>
  <thead>
    <tr>
      <th>Town desc</th>
      <th>Comment</th>
      <th>City</th>
      <th>Active status</th>
      <th>Del status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @towns.each do |town| %>
      <tr>
        <td><%= town.town_desc %></td>
        <td><%= town.comment %></td>
        <td><%= town.city_id %></td>
        <td><%= town.active_status %></td>
        <td><%= town.del_status %></td>
        <td><%= link_to 'Show', town %></td>
        <td><%= link_to 'Edit', edit_town_path(town) %></td>
        <td><%= link_to 'Destroy', town, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

