<%= link_to contact_path(contact.id), remote:true do %>
  <div class="lead p-1" style="border-width: 1px;border-bottom-style: solid;border-bottom-color: rgb(236,239,242);" id="contact-<%= contact.id %>">
    <div class="row justify-content-between">
      <div class="col col-10">
        <p class="lead" style="font-size: 15px;"><i class="fas fa-user-alt text-secondary" style="padding-right: 8px;"></i>
          <span id=fullName-<%= contact.id %>><%= contact.get_full_name %></span>
        </p>
      </div>
      <div class="col d-lg-flex justify-content-lg-end align-items-lg-center col-1">
        <i class="fas fa-chevron-right text-secondary" style="font-size: 10px;"></i>
      </div>
    </div>
  </div>
<% end %>